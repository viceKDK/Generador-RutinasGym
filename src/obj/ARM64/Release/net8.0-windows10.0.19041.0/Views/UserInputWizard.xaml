<UserControl x:Class="GymRoutineGenerator.UI.Views.UserInputWizard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16" MaxWidth="600">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="🏋️ Generador de Rutinas de Gimnasio"
                          FontSize="28"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Completa tu información para crear una rutina personalizada"
                          FontSize="16"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Personal Information Section -->
            <Border Background="LightGray"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="📝 Información Personal"
                              FontSize="20"
                              FontWeight="SemiBold"/>

                    <!-- Name -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Nombre completo" FontWeight="Medium"/>
                        <TextBox x:ConnectionId='18' x:Name="NameTextBox"
                                PlaceholderText="Ingresa tu nombre completo"
                                FontSize="14"/>
                    </StackPanel>

                    <!-- Age -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Edad" FontWeight="Medium"/>
                        <NumberBox x:ConnectionId='17' x:Name="AgeNumberBox"
                                  Value="25"
                                  Minimum="16"
                                  Maximum="80"
                                  PlaceholderText="Años"/>
                    </StackPanel>

                    <!-- Gender -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Género" FontWeight="Medium"/>
                        <StackPanel Orientation="Horizontal" Spacing="20">
                            <RadioButton x:ConnectionId='14' x:Name="MaleRadioButton"
                                        Content="🚹 Hombre"
                                        IsChecked="True"/>
                            <RadioButton x:ConnectionId='15' x:Name="FemaleRadioButton"
                                        Content="🚺 Mujer"/>
                            <RadioButton x:ConnectionId='16' x:Name="OtherRadioButton"
                                        Content="⚧ Otro"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Training Preferences Section -->
            <Border Background="LightBlue"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="💪 Preferencias de Entrenamiento"
                              FontSize="20"
                              FontWeight="SemiBold"/>

                    <!-- Training Days -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Días de entrenamiento por semana" FontWeight="Medium"/>
                        <Slider x:ConnectionId='12' x:Name="TrainingDaysSlider"
                               Minimum="1"
                               Maximum="7"
                               Value="3"
                               TickFrequency="1"
                               SnapsTo="Ticks"
                                                                             />
                        <TextBlock x:ConnectionId='13' x:Name="TrainingDaysText"
                                  Text="3 días por semana"
                                  FontWeight="Medium"
                                  HorizontalAlignment="Center"
                                  Foreground="DarkBlue"/>
                    </StackPanel>

                    <!-- Fitness Level -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Nivel de condición física" FontWeight="Medium"/>
                        <ComboBox x:ConnectionId='11' x:Name="FitnessLevelComboBox"
                                 SelectedIndex="1"
                                 MinWidth="200">
                            <ComboBoxItem Content="🟢 Principiante"/>
                            <ComboBoxItem Content="🟡 Intermedio"/>
                            <ComboBoxItem Content="🔴 Avanzado"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Training Duration -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Duración preferida por sesión" FontWeight="Medium"/>
                        <ComboBox x:ConnectionId='10' x:Name="DurationComboBox"
                                 SelectedIndex="1"
                                 MinWidth="200">
                            <ComboBoxItem Content="⏱️ 30-45 minutos"/>
                            <ComboBoxItem Content="⏱️ 45-60 minutos"/>
                            <ComboBoxItem Content="⏱️ 60-90 minutos"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Goals Section -->
            <Border Background="LightGreen"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="🎯 Objetivos de Entrenamiento"
                              FontSize="20"
                              FontWeight="SemiBold"/>

                    <StackPanel Spacing="12">
                        <CheckBox x:ConnectionId='5' x:Name="StrengthGoalCheckBox"
                                 Content="💪 Ganar fuerza"
                                 IsChecked="True"/>
                        <CheckBox x:ConnectionId='6' x:Name="MuscleGoalCheckBox"
                                 Content="🏋️ Ganar masa muscular"/>
                        <CheckBox x:ConnectionId='7' x:Name="WeightLossGoalCheckBox"
                                 Content="⚖️ Perder peso"/>
                        <CheckBox x:ConnectionId='8' x:Name="EnduranceGoalCheckBox"
                                 Content="🏃 Mejorar resistencia"/>
                        <CheckBox x:ConnectionId='9' x:Name="ToneGoalCheckBox"
                                 Content="✨ Tonificar el cuerpo"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Spacing="16">
                <Button x:ConnectionId='3' x:Name="NextButton"
                       Content="➡️ Siguiente"
                       Style="{StaticResource AccentButtonStyle}"
                       MinWidth="120"
                                               />
                <Button x:ConnectionId='4' x:Name="ResetButton"
                       Content="🔄 Limpiar"
                       MinWidth="120"
                                                />
            </StackPanel>

            <!-- Progress -->
            <StackPanel Spacing="8">
                <TextBlock Text="Progreso del asistente"
                          FontSize="12"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
                <ProgressBar x:ConnectionId='2' x:Name="WizardProgressBar"
                            Value="25"
                            Minimum="0"
                            Maximum="100"
                            Height="6"/>
                <TextBlock Text="Paso 1 de 4: Información básica"
                          FontSize="12"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

