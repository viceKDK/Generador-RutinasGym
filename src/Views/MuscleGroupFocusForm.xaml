<UserControl x:Class="GymRoutineGenerator.UI.Views.MuscleGroupFocusForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <UserControl.Resources>
    <!-- Local resource dictionary for this control -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
  </UserControl.Resources>
  <ScrollViewer>
    <StackPanel Spacing="12" Padding="16">
      <TextBlock Text="Enfoque Muscular" FontSize="20" FontWeight="Bold"/>

      <!-- Body Visualization -->
      <Border BorderBrush="Gray" BorderThickness="1" Padding="12" Margin="0,0,0,12">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0" Spacing="4" HorizontalAlignment="Center">
            <TextBlock Text="Frente" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Rectangle x:Name="BodyChest" MinWidth="100" MaxWidth="150" Height="60" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
            <Rectangle x:Name="BodyArms" MinWidth="100" MaxWidth="150" Height="30" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
            <Rectangle x:Name="BodyCore" MinWidth="100" MaxWidth="150" Height="40" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
            <Rectangle x:Name="BodyLegs" MinWidth="100" MaxWidth="150" Height="60" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
          </StackPanel>

          <StackPanel Grid.Column="1" Spacing="4" HorizontalAlignment="Center">
            <TextBlock Text="Espalda" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Rectangle x:Name="BodyBack" MinWidth="100" MaxWidth="150" Height="60" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
            <Rectangle x:Name="BodyShoulders" MinWidth="100" MaxWidth="150" Height="30" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
            <Rectangle x:Name="BodyGlutes" MinWidth="100" MaxWidth="150" Height="40" Fill="LightGray" Stroke="Black" HorizontalAlignment="Stretch"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Quick Templates -->
      <TextBlock Text="Plantillas Rápidas" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4"/>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button x:Name="WeightLossButton" Grid.Row="0" Grid.Column="0"
                Content="Pérdida de Peso"
                ToolTipService.ToolTip="Configura ejercicios para perder peso"/>
        <Button x:Name="MuscleGainButton" Grid.Row="0" Grid.Column="1"
                Content="Ganancia Muscular"
                ToolTipService.ToolTip="Configura ejercicios para ganar músculo"/>
        <Button x:Name="GeneralFitnessButton" Grid.Row="1" Grid.Column="0"
                Content="Estado General"
                ToolTipService.ToolTip="Configura rutina de ejercicios general"/>
        <Button x:Name="ClearTemplateButton" Grid.Row="1" Grid.Column="1"
                Content="Limpiar Todo"
                ToolTipService.ToolTip="Elimina todas las selecciones"/>
      </Grid>

      <!-- Muscle Groups -->
      <TextBlock Text="Grupos Musculares (1=Bajo, 2=Medio, 3=Alto)" FontSize="16" FontWeight="SemiBold" Margin="0,8,0,4"/>

      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,8,0">
          <StackPanel Spacing="4">
            <CheckBox x:Name="ChestCheckBox" Content="Pecho" FontSize="16"/>
            <Slider x:Name="ChestSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="BackCheckBox" Content="Espalda" FontSize="16"/>
            <Slider x:Name="BackSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="ShouldersCheckBox" Content="Hombros" FontSize="16"/>
            <Slider x:Name="ShouldersSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="ArmsCheckBox" Content="Brazos" FontSize="16"/>
            <Slider x:Name="ArmsSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="8">
          <StackPanel Spacing="4">
            <CheckBox x:Name="CoreCheckBox" Content="Core" FontSize="16"/>
            <Slider x:Name="CoreSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="LegsCheckBox" Content="Piernas" FontSize="16"/>
            <Slider x:Name="LegsSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="GlutesCheckBox" Content="Glúteos" FontSize="16"/>
            <Slider x:Name="GlutesSlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>

          <StackPanel Spacing="4">
            <CheckBox x:Name="FullBodyCheckBox" Content="Cuerpo Completo" FontSize="16"/>
            <Slider x:Name="FullBodySlider" Minimum="1" Maximum="3" Value="1"
                   TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          </StackPanel>
        </StackPanel>
      </Grid>

      <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>

      <Grid Margin="0,20,0,0">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="SaveFocusButton" Grid.Column="0"
                Content="💪 Guardar Preferencias"
                ToolTipService.ToolTip="Guardar la configuración de grupos musculares"
                AutomationProperties.Name="Guardar preferencias de grupos musculares"/>
        <Button x:Name="ResetFocusButton" Grid.Column="1"
                Content="🔄 Restablecer"
                ToolTipService.ToolTip="Restablecer todas las configuraciones a valores predeterminados"
                AutomationProperties.Name="Restablecer configuración"/>
      </Grid>
    </StackPanel>
  </ScrollViewer>
</UserControl>