<UserControl x:Class="GymRoutineGenerator.UI.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <Grid Margin="20" MaxWidth="700">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- App Logo/Icon -->
      <Border Grid.Row="0" Background="LightBlue" CornerRadius="20"
              Width="120" Height="120" Margin="0,0,0,20"
              HorizontalAlignment="Center">
        <TextBlock Text="🏋️" FontSize="60" HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
      </Border>

      <!-- App Name and Version -->
      <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,25">
        <TextBlock x:Name="AppNameLabel" Text="Gym Routine Generator"
                   FontSize="32" FontWeight="Bold"
                   HorizontalAlignment="Center"/>
        <TextBlock x:Name="VersionLabel" Text="Versión 1.0.0 Beta"
                   FontSize="18" FontWeight="SemiBold"
                   Foreground="Gray"
                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
        <TextBlock Text="Generador Inteligente de Rutinas de Gimnasio"
                   FontSize="16"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
      </StackPanel>

      <!-- Description -->
      <Border Grid.Row="2" Background="LightGreen" CornerRadius="8"
              Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="📋 Descripción" FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,15"/>
          <TextBlock x:Name="DescriptionLabel" TextWrapping="Wrap" FontSize="16" LineHeight="24">
            Una aplicación inteligente que utiliza IA local para generar rutinas de ejercicio personalizadas.
            Diseñada para entrenadores personales y profesionales del fitness, permite crear rutinas adaptadas
            a las necesidades, limitaciones y objetivos específicos de cada cliente.
            <LineBreak/><LineBreak/>
            ✨ <Bold>Características principales:</Bold><LineBreak/>
            • Generación automática con IA (Llama3 local)<LineBreak/>
            • Personalización completa por cliente<LineBreak/>
            • Exportación profesional a Word<LineBreak/>
            • Interfaz amigable para personas mayores<LineBreak/>
            • Base de datos completa de ejercicios
          </TextBlock>
        </StackPanel>
      </Border>

      <!-- Technical Info -->
      <Border Grid.Row="3" Background="LightCoral" CornerRadius="8"
              Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="⚙️ Información Técnica" FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,15"/>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="8" Margin="0,0,15,0">
              <TextBlock FontSize="14"><Bold>Framework:</Bold> .NET 8.0</TextBlock>
              <TextBlock FontSize="14"><Bold>UI:</Bold> WinUI 3</TextBlock>
              <TextBlock FontSize="14"><Bold>Base de datos:</Bold> SQLite + EF Core</TextBlock>
              <TextBlock FontSize="14"><Bold>IA:</Bold> Ollama (Llama3)</TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="8">
              <TextBlock FontSize="14"><Bold>Arquitectura:</Bold> Clean Architecture</TextBlock>
              <TextBlock FontSize="14"><Bold>Patrones:</Bold> CQRS, DI, Repository</TextBlock>
              <TextBlock FontSize="14"><Bold>Exportación:</Bold> OpenXML</TextBlock>
              <TextBlock FontSize="14"><Bold>Plataforma:</Bold> Windows 10/11</TextBlock>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Credits -->
      <Border Grid.Row="4" Background="LightYellow" CornerRadius="8"
              Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="👥 Créditos y Reconocimientos" FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,15"/>
          <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="22">
            <Bold>Desarrollo:</Bold> Vicente K.<LineBreak/>
            <Bold>Arquitectura:</Bold> Clean Architecture + DDD<LineBreak/>
            <Bold>IA:</Bold> Meta Llama3 via Ollama<LineBreak/>
            <Bold>Diseño UI:</Bold> Accesibilidad para personas mayores<LineBreak/>
            <Bold>Base de datos:</Bold> Ejercicios compilados de fuentes abiertas<LineBreak/>
            <Bold>Testing:</Bold> Validación exhaustiva por entrenadores<LineBreak/><LineBreak/>

            <Bold>🙏 Agradecimientos especiales:</Bold><LineBreak/>
            • Comunidad de fitness y entrenadores personales<LineBreak/>
            • Microsoft por WinUI 3 y .NET<LineBreak/>
            • Ollama team por la integración local de IA<LineBreak/>
            • OpenAI por inspirar el desarrollo de IA accesible
          </TextBlock>
        </StackPanel>
      </Border>

      <!-- Legal/License Info -->
      <Border Grid.Row="5" Background="LightGray" CornerRadius="8"
              Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="⚖️ Información Legal" FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,15"/>
          <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="20">
            <Bold>Copyright:</Bold> © 2024 Vicente K. Todos los derechos reservados.<LineBreak/>
            <Bold>Licencia:</Bold> Uso personal y comercial permitido<LineBreak/>
            <Bold>Disclaimer:</Bold> Esta aplicación es una herramienta de asistencia.
            Siempre consulte con profesionales de la salud antes de comenzar cualquier
            programa de ejercicios.<LineBreak/><LineBreak/>

            <Bold>Privacidad:</Bold> Todos los datos se almacenan localmente.
            No se envía información personal a servidores externos.
          </TextBlock>
        </StackPanel>
      </Border>

      <!-- Links and Actions -->
      <Border Grid.Row="6" Background="Lavender" CornerRadius="8"
              Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="🔗 Enlaces y Soporte" FontSize="20" FontWeight="SemiBold"
                     Margin="0,0,0,15"/>
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="10" Margin="0,0,15,0">
              <HyperlinkButton x:Name="WebsiteLink"
                               Content="🌐 Sitio web oficial"
                               FontSize="14"/>
              <HyperlinkButton x:Name="DocumentationLink"
                               Content="📚 Documentación"
                               FontSize="14"/>
              <HyperlinkButton x:Name="UpdatesLink"
                               Content="🔄 Buscar actualizaciones"
                               FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="10">
              <HyperlinkButton x:Name="SupportLink"
                               Content="🛠️ Soporte técnico"
                               FontSize="14"/>
              <HyperlinkButton x:Name="FeedbackLink"
                               Content="💭 Enviar feedback"
                               FontSize="14"/>
              <HyperlinkButton x:Name="GitHubLink"
                               Content="📦 Código fuente"
                               FontSize="14"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="7" Orientation="Horizontal"
                  HorizontalAlignment="Center" Spacing="20">
        <Button x:Name="CheckUpdatesButton" Content="🔄 Buscar Actualizaciones"
                FontSize="16" Height="45" MinWidth="200"
                Background="DodgerBlue" Foreground="White"/>
        <Button x:Name="SystemInfoButton" Content="ℹ️ Info del Sistema"
                FontSize="16" Height="45" MinWidth="160"
                Background="Gray" Foreground="White"/>
        <Button x:Name="CloseButton" Content="❌ Cerrar"
                FontSize="16" Height="45" MinWidth="120"
                Background="Orange" Foreground="White"/>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</UserControl>