{
  "name": "gym-routine-generator-electron",
  "version": "1.0.0",
  "description": "Generador de Rutinas de Gimnasio - Electron App",
  "main": "dist-electron/main.js",
  "author": "Gym Routine Generator",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "type-check": "tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "clean": "rimraf node_modules package-lock.json dist dist-electron release",
    "reinstall": "npm run clean && npm install",
    "verify": "node -e \"console.log('Electron path:', require('electron'))\""
  },
  "dependencies": {
    "@tabler/icons-react": "^3.0.0",
    "axios": "^1.6.2",
    "better-sqlite3": "^11.5.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "docx": "^8.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.gymroutine.generator",
    "productName": "Generador de Rutinas de Gimnasio",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "../gym_icon_512.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.healthcare-fitness"
    }
  }
}
