<Page
    x:Class="GymRoutineGenerator.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">
  <Grid>
    <muxc:NavigationView x:Name="NavView"
                         PaneDisplayMode="Left"
                         SelectionChanged="NavView_SelectionChanged">
      <muxc:NavigationView.MenuItems>
        <muxc:NavigationViewItem Content="Principal" Tag="export" Icon="Home"/>
        <muxc:NavigationViewItem Content="Asistente" Tag="wizard" Icon="Contact"/>
        <muxc:NavigationViewItem Content="Equipamiento" Tag="equipment" Icon="AllApps"/>
        <muxc:NavigationViewItem Content="Enfoque muscular" Tag="muscle" Icon="Favorite"/>
        <muxc:NavigationViewItem Content="Limitaciones" Tag="limits" Icon="Emoji"/>
        <muxc:NavigationViewItem Content="Datos personales" Tag="demographics" Icon="Contact2"/>
        <muxc:NavigationViewItem Content="Resumen" Tag="summary" Icon="Page"/>
        <muxc:NavigationViewItem Content="Historial" Tag="history" Icon="Recent"/>
        <muxc:NavigationViewItem Content="Configuracion" Tag="settings" Icon="Setting"/>
        <muxc:NavigationViewItem Content="Ayuda" Tag="help" Icon="Help"/>
        <muxc:NavigationViewItem Content="Acerca de" Tag="about" Icon="Info"/>
      </muxc:NavigationView.MenuItems>

      <Grid>
        <!-- Vista principal de exportaciÃ³n -->
        <ScrollViewer x:Name="ExportView" Visibility="Collapsed">
          <StackPanel Padding="16" Spacing="8">
            <TextBlock Text="Generador de Rutinas" Style="{StaticResource GrandmaTitleStyle}"/>
            <TextBox x:Name="txtClientName" PlaceholderText="Cliente" AutomationProperties.Name="Cliente"/>
            <TextBox x:Name="txtRoutineName" PlaceholderText="Rutina" AutomationProperties.Name="Rutina"/>
            <ComboBox x:Name="cmbTemplate">
              <ComboBoxItem Content="Basica"/>
              <ComboBoxItem Content="Estandar"/>
            </ComboBox>
            <CheckBox x:Name="chkAutoOpen" Content="Abrir automaticamente"/>
            <CheckBox x:Name="chkIncludeImages" Content="Incluir imagenes"/>
            <StackPanel Orientation="Horizontal" Spacing="8">
              <Button x:Name="btnExport" Content="Crear" Click="OnExportClicked" Style="{StaticResource GrandmaExportButtonStyle}"/>
              <Button x:Name="btnSelectPath" Content="Cambiar ubicacion" Click="OnSelectPathClicked" Style="{StaticResource GrandmaSecondaryButtonStyle}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8">
              <ProgressRing x:Name="ringExport" Width="24" Height="24" IsActive="False"/>
              <TextBlock x:Name="txtStatus" Style="{StaticResource GrandmaStatusStyle}"/>
            </StackPanel>
            <ProgressBar x:Name="progressExport" Minimum="0" Maximum="100" Visibility="Collapsed" Style="{StaticResource GrandmaProgressBarStyle}"/>
            <TextBlock x:Name="txtResults"/>
          </StackPanel>
        </ScrollViewer>

        <!-- Contenedor para vistas secundarias -->
        <ContentPresenter x:Name="ContentHost"/>
      </Grid>
    </muxc:NavigationView>
  </Grid>
</Page>
