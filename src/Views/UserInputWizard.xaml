<UserControl x:Class="GymRoutineGenerator.UI.Views.UserInputWizard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel MaxWidth="1200"
                    Padding="24"
                    Spacing="20">

            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Generador de Rutinas de Gimnasio"
                          FontSize="28"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Completa tu informacion para crear una rutina personalizada"
                          FontSize="16"
                          Foreground="Gray"
                          HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Personal Information Section -->
            <Border Background="LightGray"
                    Padding="24"
                    BorderBrush="Gray"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <TextBlock Text="Información Personal"
                              FontSize="22"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Left"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Name (Full Width) -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Spacing="8">
                            <TextBlock Text="Nombre completo"
                                       FontWeight="Medium"
                                       FontSize="14"/>
                            <TextBox x:Name="NameTextBox"
                                     PlaceholderText="Ingresa tu nombre completo"
                                     FontSize="14"
                                     Height="40"
                                     TabIndex="1"/>
                        </StackPanel>

                        <!-- Age -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="8">
                            <TextBlock Text="Edad" FontWeight="Medium" FontSize="14"/>
                            <TextBox x:Name="AgeTextBox"
                                      Text="25"
                                      PlaceholderText="Años"
                                      Height="40"
                                      TabIndex="2"/>
                        </StackPanel>

                        <!-- Gender -->
                        <StackPanel Grid.Row="2" Grid.Column="2" Spacing="8">
                            <TextBlock Text="Género" FontWeight="Medium" FontSize="14"/>
                            <StackPanel Spacing="12">
                                <RadioButton x:Name="MaleRadioButton"
                                            Content="Hombre"
                                            IsChecked="True"
                                            FontSize="14"/>
                                <RadioButton x:Name="FemaleRadioButton"
                                            Content="Mujer"
                                            FontSize="14"/>
                                <RadioButton x:Name="OtherRadioButton"
                                            Content="Otro"
                                            FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Training Preferences Section -->
            <Border Background="LightBlue"
                    Padding="24"
                    BorderBrush="Blue"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <TextBlock Text="Preferencias de Entrenamiento"
                              FontSize="22"
                              FontWeight="SemiBold"/>

                    <!-- Responsive Grid for preferences -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Training Days (Full Width) -->
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Spacing="12">
                            <TextBlock Text="Días de entrenamiento por semana"
                                       FontWeight="Medium"
                                       FontSize="16"/>
                            <Slider x:Name="TrainingDaysSlider"
                                   Minimum="1"
                                   Maximum="7"
                                   Value="3"
                                   TickFrequency="1"
                                   SnapsTo="Ticks"
                                   ValueChanged="TrainingDaysSlider_ValueChanged"
                                   Height="40"
                                   AutomationProperties.Name="Días de entrenamiento por semana"
                                   AutomationProperties.HelpText="Selecciona entre 1 y 7 días de entrenamiento por semana"
                                   TabIndex="4"/>
                            <TextBlock x:Name="TrainingDaysText"
                                      Text="3 días por semana"
                                      FontWeight="Medium"
                                      HorizontalAlignment="Center"
                                      Foreground="Blue"
                                      FontSize="16"/>
                        </StackPanel>

                        <!-- Fitness Level -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Spacing="8">
                            <TextBlock Text="Nivel de condición física"
                                       FontWeight="Medium"
                                       FontSize="14"/>
                            <ComboBox x:Name="FitnessLevelComboBox"
                                     SelectedIndex="1"
                                     HorizontalAlignment="Stretch"
                                     Height="40">
                                <ComboBoxItem Content="Principiante"/>
                                <ComboBoxItem Content="Intermedio"/>
                                <ComboBoxItem Content="Avanzado"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Training Duration -->
                        <StackPanel Grid.Row="2" Grid.Column="2" Spacing="8">
                            <TextBlock Text="Duración preferida por sesión"
                                       FontWeight="Medium"
                                       FontSize="14"/>
                            <ComboBox x:Name="DurationComboBox"
                                     SelectedIndex="1"
                                     HorizontalAlignment="Stretch"
                                     Height="40">
                                <ComboBoxItem Content="30-45 minutos"/>
                                <ComboBoxItem Content="45-60 minutos"/>
                                <ComboBoxItem Content="60-90 minutos"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Goals Section -->
            <Border Background="LightGreen"
                    Padding="24"
                    BorderBrush="Green"
                    BorderThickness="1">
                <StackPanel Spacing="20">
                    <TextBlock Text="Objetivos de Entrenamiento"
                              FontSize="22"
                              FontWeight="SemiBold"/>

                    <TextBlock Text="Selecciona todos los objetivos que se adapten a tus metas (puedes elegir varios)"
                              FontSize="14"
                              Foreground="DarkGreen"
                              TextWrapping="Wrap"/>

                    <!-- Goals Grid for responsive layout -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="16" Margin="0,0,10,0">
                            <Border Background="White" CornerRadius="8" Padding="16">
                                <CheckBox x:Name="StrengthGoalCheckBox"
                                         Content="Ganar fuerza"
                                         IsChecked="True"
                                         FontSize="16"
                                         FontWeight="Medium"/>
                            </Border>
                            <Border Background="White" CornerRadius="8" Padding="16">
                                <CheckBox x:Name="MuscleGoalCheckBox"
                                         Content="Ganar masa muscular"
                                         FontSize="16"
                                         FontWeight="Medium"/>
                            </Border>
                            <Border Background="White" CornerRadius="8" Padding="16">
                                <CheckBox x:Name="WeightLossGoalCheckBox"
                                         Content="Perder peso"
                                         FontSize="16"
                                         FontWeight="Medium"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Spacing="16" Margin="10,0,0,0">
                            <Border Background="White" CornerRadius="8" Padding="16">
                                <CheckBox x:Name="EnduranceGoalCheckBox"
                                         Content="Mejorar resistencia"
                                         FontSize="16"
                                         FontWeight="Medium"/>
                            </Border>
                            <Border Background="White" CornerRadius="8" Padding="16">
                                <CheckBox x:Name="ToneGoalCheckBox"
                                         Content="Tonificar el cuerpo"
                                         FontSize="16"
                                         FontWeight="Medium"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal"
                       HorizontalAlignment="Center"
                       Spacing="20">
                <Button x:Name="NextButton"
                       Content="Continuar"
                       Background="Green"
                       Foreground="White"
                       MinWidth="150"
                       Height="50"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Click="NextButton_Click"/>
                <Button x:Name="ResetButton"
                       Content="Limpiar Formulario"
                       Background="Gray"
                       Foreground="White"
                       MinWidth="150"
                       Height="50"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Click="ResetButton_Click"/>
            </StackPanel>

            <!-- Progress Section -->
            <Border Background="White"
                    Padding="20"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="Progreso del Asistente"
                              FontSize="16"
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"/>

                    <!-- Custom Progress Bar -->
                    <Grid Height="8" Background="LightGray">
                        <Rectangle x:Name="ProgressFill"
                                  Fill="Green"
                                  HorizontalAlignment="Left"
                                  Width="200"/>
                    </Grid>

                    <StackPanel Spacing="4">
                        <TextBlock Text="Paso 1 de 4: Información básica"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  HorizontalAlignment="Center"
                                  Foreground="Green"/>
                        <TextBlock Text="25% Completado"
                                  FontSize="12"
                                  Foreground="Gray"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Step indicators -->
                    <StackPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               Spacing="12">
                        <Border Background="Green" Width="24" Height="24">
                            <TextBlock Text="1" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Rectangle Width="20" Height="2" Fill="LightGray"/>
                        <Border Background="LightGray" Width="24" Height="24">
                            <TextBlock Text="2" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Rectangle Width="20" Height="2" Fill="LightGray"/>
                        <Border Background="LightGray" Width="24" Height="24">
                            <TextBlock Text="3" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                        <Rectangle Width="20" Height="2" Fill="LightGray"/>
                        <Border Background="LightGray" Width="24" Height="24">
                            <TextBlock Text="4" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>

