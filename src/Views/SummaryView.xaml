<UserControl x:Class="GymRoutineGenerator.UI.Views.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <StackPanel Padding="16" Spacing="8">
      <TextBlock Text="Resumen de seleccion" FontSize="20"/>
      <TextBlock Text="Datos personales:" FontWeight="Bold"/>
      <TextBlock x:Name="TxtPersonal"/>
      <TextBlock Text="Preferencias de entrenamiento:" FontWeight="Bold"/>
      <TextBlock x:Name="TxtTraining"/>
      <TextBlock Text="Equipamiento:" FontWeight="Bold"/>
      <TextBlock x:Name="TxtEquipment"/>
      <TextBlock Text="Enfoque muscular:" FontWeight="Bold"/>
      <TextBlock x:Name="TxtMuscles"/>
      <TextBlock Text="Limitaciones:" FontWeight="Bold"/>
      <TextBlock x:Name="TxtLimits"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>

