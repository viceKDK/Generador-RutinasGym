<UserControl x:Class="GymRoutineGenerator.UI.Views.MuscleGroupFocusForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <StackPanel Spacing="8" Padding="12">
      <TextBlock Text="Enfoque Muscular (placeholder)" FontSize="20"/>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:ConnectionId='21' x:Name="WeightLossButton" Content="Peso"/>
        <Button x:ConnectionId='22' x:Name="MuscleGainButton" Content="Musculo"/>
        <Button x:ConnectionId='23' x:Name="GeneralFitnessButton" Content="General"/>
        <Button x:ConnectionId='24' x:Name="ClearTemplateButton" Content="Limpiar"/>
      </StackPanel>
      <CheckBox x:ConnectionId='2' x:Name="ChestCheckBox" Content="Pecho"/>
      <Slider x:ConnectionId='3' x:Name="ChestSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='4' x:Name="BackCheckBox" Content="Espalda"/>
      <Slider x:ConnectionId='5' x:Name="BackSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='6' x:Name="ShouldersCheckBox" Content="Hombros"/>
      <Slider x:ConnectionId='7' x:Name="ShouldersSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='8' x:Name="ArmsCheckBox" Content="Brazos"/>
      <Slider x:ConnectionId='9' x:Name="ArmsSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='10' x:Name="CoreCheckBox" Content="Core"/>
      <Slider x:ConnectionId='11' x:Name="CoreSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='12' x:Name="LegsCheckBox" Content="Piernas"/>
      <Slider x:ConnectionId='13' x:Name="LegsSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='14' x:Name="GlutesCheckBox" Content="Gluteos"/>
      <Slider x:ConnectionId='15' x:Name="GlutesSlider" Minimum="1" Maximum="3" Value="1"/>
      <CheckBox x:ConnectionId='16' x:Name="FullBodyCheckBox" Content="Cuerpo Completo"/>
      <Slider x:ConnectionId='17' x:Name="FullBodySlider" Minimum="1" Maximum="3" Value="1"/>
      <TextBlock x:ConnectionId='18' x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:ConnectionId='19' x:Name="SaveFocusButton" Content="Guardar"/>
        <Button x:ConnectionId='20' x:Name="ResetFocusButton" Content="Restablecer"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>

