<UserControl x:Class="GymRoutineGenerator.UI.Views.MuscleGroupFocusForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <StackPanel Spacing="8" Padding="12">
      <TextBlock Text="Enfoque Muscular" FontSize="20" FontWeight="Bold"/>

      <!-- Body Visualization -->
      <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,0,0,8">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0" Spacing="4">
            <TextBlock Text="Frente" FontWeight="Bold"/>
            <Rectangle x:Name="BodyChest" Width="120" Height="60" Fill="LightGray" Stroke="Black"/>
            <Rectangle x:Name="BodyArms" Width="120" Height="30" Fill="LightGray" Stroke="Black"/>
            <Rectangle x:Name="BodyCore" Width="120" Height="40" Fill="LightGray" Stroke="Black"/>
            <Rectangle x:Name="BodyLegs" Width="120" Height="60" Fill="LightGray" Stroke="Black"/>
          </StackPanel>

          <StackPanel Grid.Column="1" Spacing="4">
            <TextBlock Text="Espalda" FontWeight="Bold"/>
            <Rectangle x:Name="BodyBack" Width="120" Height="60" Fill="LightGray" Stroke="Black"/>
            <Rectangle x:Name="BodyShoulders" Width="120" Height="30" Fill="LightGray" Stroke="Black"/>
            <Rectangle x:Name="BodyGlutes" Width="120" Height="40" Fill="LightGray" Stroke="Black"/>
          </StackPanel>
        </Grid>
      </Border>

      <!-- Quick Templates -->
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:Name="WeightLossButton" Content="Peso"/>
        <Button x:Name="MuscleGainButton" Content="Musculo"/>
        <Button x:Name="GeneralFitnessButton" Content="General"/>
        <Button x:Name="ClearTemplateButton" Content="Limpiar"/>
      </StackPanel>

      <!-- Muscle Groups -->
      <CheckBox x:Name="ChestCheckBox" Content="Pecho"/>
      <Slider x:Name="ChestSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="BackCheckBox" Content="Espalda"/>
      <Slider x:Name="BackSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="ShouldersCheckBox" Content="Hombros"/>
      <Slider x:Name="ShouldersSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="ArmsCheckBox" Content="Brazos"/>
      <Slider x:Name="ArmsSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="CoreCheckBox" Content="Core"/>
      <Slider x:Name="CoreSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="LegsCheckBox" Content="Piernas"/>
      <Slider x:Name="LegsSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="GlutesCheckBox" Content="Gluteos"/>
      <Slider x:Name="GlutesSlider" Minimum="1" Maximum="3" Value="1"/>

      <CheckBox x:Name="FullBodyCheckBox" Content="Cuerpo Completo"/>
      <Slider x:Name="FullBodySlider" Minimum="1" Maximum="3" Value="1"/>

      <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed"/>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:Name="SaveFocusButton" Content="Guardar"/>
        <Button x:Name="ResetFocusButton" Content="Restablecer"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>