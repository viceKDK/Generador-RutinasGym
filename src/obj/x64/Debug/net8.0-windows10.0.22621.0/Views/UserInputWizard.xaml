<UserControl x:Class="GymRoutineGenerator.UI.Views.UserInputWizard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <StackPanel Padding="12" Spacing="8">
      <TextBox x:ConnectionId='2' x:Name="NameTextBox" PlaceholderText="Nombre"/>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <RadioButton x:ConnectionId='6' x:Name="MaleRadioButton" Content="Hombre"/>
        <RadioButton x:ConnectionId='7' x:Name="FemaleRadioButton" Content="Mujer"/>
        <RadioButton x:ConnectionId='8' x:Name="OtherRadioButton" Content="Otro"/>
      </StackPanel>
      <NumberBox x:ConnectionId='3' x:Name="AgeNumberBox" Value="25"/>
      <Slider x:ConnectionId='4' x:Name="TrainingDaysSlider" Minimum="1" Maximum="7" Value="3"/>
      <TextBlock x:ConnectionId='5' x:Name="TrainingDaysText"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>

