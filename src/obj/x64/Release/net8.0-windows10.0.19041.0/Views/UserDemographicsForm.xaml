<UserControl x:Class="GymRoutineGenerator.UI.Views.UserDemographicsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <StackPanel Padding="12" Spacing="8">
    <TextBox x:ConnectionId='2' x:Name="NameTextBox" PlaceholderText="Nombre"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <RadioButton x:ConnectionId='8' x:Name="MaleRadioButton" Content="Hombre"/>
      <RadioButton x:ConnectionId='9' x:Name="FemaleRadioButton" Content="Mujer"/>
      <RadioButton x:ConnectionId='10' x:Name="OtherRadioButton" Content="Otro"/>
    </StackPanel>
    <NumberBox x:ConnectionId='3' x:Name="AgeNumberBox" Value="25"/>
    <Slider x:ConnectionId='4' x:Name="TrainingDaysSlider" Minimum="1" Maximum="7" Value="3"/>
    <TextBlock x:ConnectionId='5' x:Name="ErrorTextBlock" Visibility="Collapsed"/>
    <StackPanel Orientation="Horizontal" Spacing="8">
      <Button x:ConnectionId='6' x:Name="SaveButton" Content="Guardar"/>
      <Button x:ConnectionId='7' x:Name="ClearButton" Content="Limpiar"/>
    </StackPanel>
  </StackPanel>
</UserControl>

