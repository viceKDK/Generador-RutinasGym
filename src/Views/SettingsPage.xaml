<UserControl x:Class="GymRoutineGenerator.UI.Views.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <Grid Margin="20" MaxWidth="800">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Title -->
      <TextBlock Grid.Row="0" Text="⚙️ Configuración"
                 FontSize="28" FontWeight="Bold"
                 Margin="0,0,0,20"
                 HorizontalAlignment="Center"/>

      <!-- General Settings -->
      <Border Grid.Row="1" Background="LightBlue" CornerRadius="8" Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="🔧 Configuración General" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="15" Margin="0,0,15,0">
              <StackPanel>
                <TextBlock Text="Idioma" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="LanguageComboBox" FontSize="14" Height="35">
                  <ComboBoxItem Content="🇪🇸 Español" IsSelected="True"/>
                  <ComboBoxItem Content="🇺🇸 English"/>
                  <ComboBoxItem Content="🇫🇷 Français"/>
                </ComboBox>
              </StackPanel>

              <StackPanel>
                <TextBlock Text="Tema" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="ThemeComboBox" FontSize="14" Height="35">
                  <ComboBoxItem Content="🌞 Claro" IsSelected="True"/>
                  <ComboBoxItem Content="🌙 Oscuro"/>
                  <ComboBoxItem Content="🔄 Automático"/>
                </ComboBox>
              </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="15">
              <StackPanel>
                <TextBlock Text="Tamaño de Fuente" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                  <Slider x:Name="FontSizeSlider" Minimum="12" Maximum="20" Value="16" Width="150"/>
                  <TextBlock x:Name="FontSizeLabel" Text="16pt" VerticalAlignment="Center"/>
                </StackPanel>
              </StackPanel>

              <CheckBox x:Name="AutoSaveCheckBox" Content="🔄 Guardado automático" FontSize="14" IsChecked="True"/>
              <CheckBox x:Name="ShowTipsCheckBox" Content="💡 Mostrar consejos" FontSize="14" IsChecked="True"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Export Settings -->
      <Border Grid.Row="2" Background="LightGreen" CornerRadius="8" Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="📄 Configuración de Exportación" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="15" Margin="0,0,15,0">
              <StackPanel>
                <TextBlock Text="Carpeta predeterminada" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                  <TextBox x:Name="DefaultPathTextBox" Text="C:\Users\Documents\Rutinas"
                           FontSize="14" Height="35" MinWidth="200"/>
                  <Button x:Name="BrowseButton" Content="📁" FontSize="14" Height="35" Width="40"/>
                </StackPanel>
              </StackPanel>

              <StackPanel>
                <TextBlock Text="Plantilla predeterminada" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="TemplateComboBox" FontSize="14" Height="35">
                  <ComboBoxItem Content="📋 Estándar" IsSelected="True"/>
                  <ComboBoxItem Content="🎨 Moderna"/>
                  <ComboBoxItem Content="📊 Detallada"/>
                </ComboBox>
              </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="15">
              <CheckBox x:Name="OpenAfterExportCheckBox" Content="📂 Abrir después de exportar"
                        FontSize="14" IsChecked="True"/>
              <CheckBox x:Name="IncludeImagesCheckBox" Content="🖼️ Incluir imágenes"
                        FontSize="14" IsChecked="False"/>
              <CheckBox x:Name="AutoBackupCheckBox" Content="💾 Respaldo automático"
                        FontSize="14" IsChecked="True"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- AI Settings -->
      <Border Grid.Row="3" Background="LightCoral" CornerRadius="8" Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="🤖 Configuración de IA" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="15" Margin="0,0,15,0">
              <StackPanel>
                <TextBlock Text="Modelo de IA" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="AIModelComboBox" FontSize="14" Height="35">
                  <ComboBoxItem Content="🦙 Llama3 (Local)" IsSelected="True"/>
                  <ComboBoxItem Content="🧠 GPT-4 (Remoto)"/>
                  <ComboBoxItem Content="⚡ Claude (Remoto)"/>
                </ComboBox>
              </StackPanel>

              <StackPanel>
                <TextBlock Text="Creatividad" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Spacing="10">
                  <Slider x:Name="CreativitySlider" Minimum="0.1" Maximum="1.0" Value="0.7" Width="150"/>
                  <TextBlock x:Name="CreativityLabel" Text="0.7" VerticalAlignment="Center"/>
                </StackPanel>
              </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="15">
              <CheckBox x:Name="UseAIRecommendationsCheckBox" Content="💡 Usar recomendaciones de IA"
                        FontSize="14" IsChecked="True"/>
              <CheckBox x:Name="DetailedExplanationsCheckBox" Content="📝 Explicaciones detalladas"
                        FontSize="14" IsChecked="False"/>
              <CheckBox x:Name="SafeModeCheckBox" Content="🛡️ Modo seguro (conservador)"
                        FontSize="14" IsChecked="True"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Performance Settings -->
      <Border Grid.Row="4" Background="LightYellow" CornerRadius="8" Padding="20" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="⚡ Configuración de Rendimiento" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,15"/>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="15" Margin="0,0,15,0">
              <CheckBox x:Name="EnableAnimationsCheckBox" Content="🎬 Habilitar animaciones"
                        FontSize="14" IsChecked="True"/>
              <CheckBox x:Name="CacheDataCheckBox" Content="💾 Cachear datos"
                        FontSize="14" IsChecked="True"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="15">
              <CheckBox x:Name="LowMemoryModeCheckBox" Content="🧠 Modo de baja memoria"
                        FontSize="14" IsChecked="False"/>
              <CheckBox x:Name="DebugModeCheckBox" Content="🐛 Modo debug"
                        FontSize="14" IsChecked="False"/>
            </StackPanel>
          </Grid>
        </StackPanel>
      </Border>

      <!-- Status -->
      <TextBlock x:Name="StatusTextBlock" Grid.Row="5"
                 Text="Configuración cargada correctamente"
                 Foreground="Green" FontSize="14"
                 HorizontalAlignment="Center" Margin="0,0,0,20"/>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="6" Orientation="Horizontal"
                  HorizontalAlignment="Center" Spacing="20">
        <Button x:Name="SaveSettingsButton" Content="💾 Guardar Configuración"
                FontSize="16" Height="50" MinWidth="180"
                Background="DodgerBlue" Foreground="White"/>
        <Button x:Name="ResetSettingsButton" Content="🔄 Restablecer"
                FontSize="16" Height="50" MinWidth="140"
                Background="Orange" Foreground="White"/>
        <Button x:Name="ExportSettingsButton" Content="📤 Exportar Config"
                FontSize="16" Height="50" MinWidth="140"
                Background="Gray" Foreground="White"/>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</UserControl>