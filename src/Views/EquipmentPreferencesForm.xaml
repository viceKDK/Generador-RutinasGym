<UserControl x:Class="GymRoutineGenerator.UI.Views.EquipmentPreferencesForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20" MaxWidth="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Equipamiento Disponible"
                   FontSize="28" FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Subtitle -->
        <TextBlock Grid.Row="1"
                   Text="Seleccione el equipamiento disponible para el cliente"
                   FontSize="16"
                   Foreground="Gray"
                   Margin="0,0,0,25"
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"/>

        <!-- Quick Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,0,0,10">
            <TextBox x:Name="SearchBox" Width="260" PlaceholderText="Buscar equipamiento" TextChanged="SearchBox_TextChanged"/>
        </StackPanel>
        
        <!-- Actions -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Margin="0,0,0,25">
            <Button x:Name="SelectAllButton"
                    Content=" Seleccionar Todo"
                    FontSize="14"
                    Height="45"
                    MinWidth="160"
                    Background="Green"
                    Foreground="White"
                    Click="SelectAllButton_Click"/>
            <Button x:Name="ClearAllButton"
                    Content=" Limpiar Todo"
                    FontSize="14"
                    Height="45"
                    MinWidth="160"
                    Background="Orange"
                    Foreground="White"
                    Click="ClearAllButton_Click"/>
        </StackPanel>

        <!-- Equipment Categories -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="25">

                <!-- Peso Corporal -->
                <Border Background="LightBlue"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text=" Peso Corporal"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <CheckBox x:Name="BodyweightCheckBox"
                                  Content="Ejercicios sin equipamiento"
                                  FontSize="16"
                                  MinHeight="50"
                                  IsChecked="True"/>
                    </StackPanel>
                </Border>

                <!-- Pesas Libres -->
                <Border Background="LightGreen"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text=" Pesas Libres"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <StackPanel Spacing="10">
                            <CheckBox x:Name="DumbbellsCheckBox"
                                      Content="Mancuernas"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="BarbellCheckBox"
                                      Content="Barra"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="KettlebellsCheckBox"
                                      Content="Kettlebells"
                                      FontSize="16"
                                      MinHeight="50"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Maquinas -->
                <Border Background="LightCoral"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text=" Maquinas"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <StackPanel Spacing="10">
                            <CheckBox x:Name="CableMachinesCheckBox"
                                      Content="Maquinas de poleas"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="CardioMachinesCheckBox"
                                      Content="Maquinas cardiovasculares"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="WeightMachinesCheckBox"
                                      Content="Maquinas de pesas"
                                      FontSize="16"
                                      MinHeight="50"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Bandas Elasticas -->
                <Border Background="LightYellow"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text=" Bandas Elasticas"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <CheckBox x:Name="ResistanceBandsCheckBox"
                                  Content="Bandas de resistencia"
                                  FontSize="16"
                                  MinHeight="50"/>
                    </StackPanel>
                </Border>

                <!-- Otros -->
                <Border Background="LightGray"
                        CornerRadius="10"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text=" Otros"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <StackPanel Spacing="10">
                            <CheckBox x:Name="PullUpBarCheckBox"
                                      Content="Barra de Dominadas"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="MedicineBallCheckBox"
                                      Content="Pelota medicinal"
                                      FontSize="16"
                                      MinHeight="50"/>
                            <CheckBox x:Name="FoamRollerCheckBox"
                                      Content="Foam roller"
                                      FontSize="16"
                                      MinHeight="50"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Error Messages -->
        <TextBlock x:Name="ErrorTextBlock"
                   Grid.Row="4"
                   Foreground="Red"
                   FontSize="14"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"
                   Margin="0,20,0,0"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Margin="0,25,0,0">
            <Button x:Name="SavePreferencesButton"
                    Content="Guardar Preferencias"
                    FontSize="16"
                    Height="60"
                    MinWidth="180"
                    Background="DodgerBlue"
                    Foreground="White"
                    Click="SavePreferencesButton_Click"/>
            <Button x:Name="ResetButton"
                    Content="Restablecer"
                    FontSize="16"
                    Height="60"
                    MinWidth="120"
                    Background="Gray"
                    Foreground="White"
                    Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>



