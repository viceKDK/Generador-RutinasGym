<UserControl
    x:Class="GymRoutineGenerator.UI.Controls.ImageDropPreview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="240"
    d:DesignWidth="360">
  <Grid AllowDrop="True" DragOver="DropZone_DragOver" Drop="DropZone_Drop">
    <Border x:Name="DropZone"
            CornerRadius="8"
            BorderBrush="DarkGray"
            BorderThickness="2"
            Background="LightGray"
            AllowDrop="True"
            DragOver="DropZone_DragOver"
            Drop="DropZone_Drop"
            PointerEntered="DropZone_PointerEntered"
            PointerExited="DropZone_PointerExited">
      <Grid>
        <Image x:Name="PreviewImage"
               Stretch="Uniform"
               Margin="4"
               AllowDrop="True"
               DragOver="DropZone_DragOver"
               Drop="DropZone_Drop"/>

        <Border x:Name="Overlay"
                Background="#66000000"
                Visibility="Collapsed"
                IsHitTestVisible="False">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="Suelta la imagen aquÃ­" Foreground="White" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <TextBlock Text="Formatos: JPG, PNG, GIF, BMP" Foreground="White" Opacity="0.85" HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>
      </Grid>
    </Border>
  </Grid>
</UserControl>

