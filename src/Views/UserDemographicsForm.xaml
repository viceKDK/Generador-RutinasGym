<UserControl x:Class="GymRoutineGenerator.UI.Views.UserDemographicsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <Grid Margin="20" MaxWidth="600">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Title -->
      <TextBlock Grid.Row="0" Text="Datos del Cliente"
                 FontSize="24" FontWeight="Bold"
                 Margin="0,0,0,20"
                 HorizontalAlignment="Center"/>

      <!-- Subtitle -->
      <TextBlock Grid.Row="1"
                 Text="Ingrese la información personal del cliente"
                 FontSize="14" Foreground="Gray"
                 Margin="0,0,0,25"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap"/>

      <!-- Name -->
      <StackPanel Grid.Row="2" Margin="0,0,0,15">
        <TextBlock Text="Nombre Completo" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox x:Name="NameTextBox" PlaceholderText="Ej: Juan Pérez" FontSize="16" Height="45"/>
      </StackPanel>

      <!-- Gender -->
      <StackPanel Grid.Row="3" Margin="0,0,0,15">
        <TextBlock Text="Género" FontWeight="SemiBold" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Spacing="25">
          <RadioButton x:Name="MaleRadioButton" Content="🚹 Hombre" FontSize="16" GroupName="Gender"/>
          <RadioButton x:Name="FemaleRadioButton" Content="🚺 Mujer" FontSize="16" GroupName="Gender"/>
          <RadioButton x:Name="OtherRadioButton" Content="⚧ Otro" FontSize="16" GroupName="Gender"/>
        </StackPanel>
      </StackPanel>

      <!-- Age -->
      <StackPanel Grid.Row="4" Margin="0,0,0,15">
        <TextBlock Text="Edad" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <NumberBox x:Name="AgeNumberBox" Value="25" Minimum="12" Maximum="99"
                   FontSize="16" Height="45" PlaceholderText="Ej: 30"/>
      </StackPanel>

      <!-- Fitness Level -->
      <StackPanel Grid.Row="5" Margin="0,0,0,15">
        <TextBlock Text="Nivel de Condición Física" FontWeight="SemiBold" Margin="0,0,0,10"/>
        <ComboBox x:Name="FitnessLevelComboBox" FontSize="16" Height="45" MinWidth="200">
          <ComboBoxItem Content="🟢 Principiante"/>
          <ComboBoxItem Content="🟡 Intermedio"/>
          <ComboBoxItem Content="🔴 Avanzado"/>
        </ComboBox>
      </StackPanel>

      <!-- Training Days -->
      <StackPanel Grid.Row="6" Margin="0,0,0,15">
        <TextBlock Text="Días de Entrenamiento por Semana" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <StackPanel Orientation="Horizontal" Spacing="15">
          <Slider x:Name="TrainingDaysSlider" Minimum="1" Maximum="7" Value="3"
                  Width="300" VerticalAlignment="Center"
                  TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          <TextBlock x:Name="TrainingDaysLabel" Text="3 días" FontSize="16"
                     VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
      </StackPanel>

      <!-- Goals -->
      <StackPanel Grid.Row="7" Margin="0,0,0,15">
        <TextBlock Text="Objetivos Principales" FontWeight="SemiBold" Margin="0,0,0,10"/>
        <StackPanel Spacing="8">
          <CheckBox x:Name="WeightLossGoalCheckBox" Content="💪 Pérdida de peso" FontSize="16"/>
          <CheckBox x:Name="MuscleGainGoalCheckBox" Content="🏋️ Ganancia muscular" FontSize="16"/>
          <CheckBox x:Name="EnduranceGoalCheckBox" Content="🏃 Mejora de resistencia" FontSize="16"/>
          <CheckBox x:Name="StrengthGoalCheckBox" Content="💥 Aumento de fuerza" FontSize="16"/>
          <CheckBox x:Name="GeneralFitnessGoalCheckBox" Content="🌟 Estado físico general" FontSize="16"/>
        </StackPanel>
      </StackPanel>

      <!-- Error Messages -->
      <TextBlock x:Name="ErrorTextBlock" Grid.Row="8"
                 Foreground="Red" FontSize="14"
                 TextWrapping="Wrap" Visibility="Collapsed"
                 Margin="0,10,0,20"/>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="9" Orientation="Horizontal"
                  HorizontalAlignment="Center" Spacing="20">
        <Button x:Name="SaveButton" Content="💾 Guardar Perfil"
                FontSize="16" Height="50" MinWidth="150"
                Background="DodgerBlue" Foreground="White"/>
        <Button x:Name="ClearButton" Content="🗑️ Limpiar"
                FontSize="16" Height="50" MinWidth="120"
                Background="Gray" Foreground="White"/>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</UserControl>
