}"use client"

 import type React from "react"
 import { cn } from "@/lib/utils"
 import { Loader2 } from "lucide-react"

 export type ButtonType = "primary" | "secondary" | "success" | "warning" | "error"

 export interface LargeActionButtonProps {
   buttonText: string
   buttonType?: ButtonType
   isLoading?: boolean
   isEnabled?: boolean
   onClick?: () => void
   className?: string
   isCritical?: boolean // For 80px height instead of 60px
 }

 const buttonVariants = {
   primary: "bg-primary text-primary-foreground hover:bg-primary/90 focus:ring-primary/50",
   secondary: "bg-secondary text-secondary-foreground hover:bg-secondary/90 focus:ring-secondary/50",
   success: "bg-success text-success-foreground hover:bg-success/90 focus:ring-success/50",
   warning: "bg-warning text-warning-foreground hover:bg-warning/90 focus:ring-warning/50",
   error: "bg-error text-error-foreground hover:bg-error/90 focus:ring-error/50",
 }

 export function LargeActionButton({
   buttonText,
   buttonType = "primary",
   isLoading = false,
   isEnabled = true,
   onClick,
   className,
   isCritical = false,
 }: LargeActionButtonProps) {
   const handleClick = () => {
     if (isEnabled && !isLoading && onClick) {
       onClick()
     }
   }

   const handleKeyDown = (event: React.KeyboardEvent) => {
     if ((event.key === "Enter" || event.key === " ") && isEnabled && !isLoading) {
       event.preventDefault()
       onClick?.()
     }
   }

   return (
     <button
       type="button"
       onClick={handleClick}
       onKeyDown={handleKeyDown}
       disabled={!isEnabled || isLoading}
       aria-label={isLoading ? `${buttonText} - Cargando` : buttonText}
       aria-busy={isLoading}
       className={cn(
         // Base styles - optimized for 50+ users
         "relative inline-flex items-center justify-center gap-3 font-sans font-medium text-lg leading-relaxed",
         "px-4 py-3 min-w-[120px] rounded-lg transition-all duration-200 ease-in-out",
         "focus:outline-none focus:ring-3 focus:ring-offset-2 focus:ring-offset-background",

         // Height based on criticality
         isCritical ? "min-h-[80px]" : "min-h-[60px]",

         // Button type variants
         buttonVariants[buttonType],

         // Interactive states
         isEnabled &&
           !isLoading && [
             "cursor-pointer",
             "hover:scale-[1.02] active:scale-[0.98]",
             "hover:shadow-lg active:shadow-md",
           ],

         // Disabled state
         (!isEnabled || isLoading) && [
           "opacity-50 cursor-not-allowed",
           "hover:scale-100 active:scale-100",
           "hover:shadow-none active:shadow-none",
         ],

         className,
       )}
     >
       {/* Loading spinner */}
       {isLoading && <Loader2 className="h-5 w-5 animate-spin" aria-hidden="true" />}

       {/* Button text */}
       <span className={cn("text-balance", isLoading && "sr-only sm:not-sr-only")}>{buttonText}</span>

       {/* Screen reader loading announcement */}
       {isLoading && <span className="sr-only">Cargando, por favor espere...</span>}
     </button>
   )
 }
"use client"

import { useState } from "react"
import { LargeActionButton, type ButtonType } from "@/components/large-action-button"

export default function HomePage() {
  const [loadingStates, setLoadingStates] = useState<Record<string, boolean>>({})

  const handleButtonClick = (buttonId: string) => {
    setLoadingStates((prev) => ({ ...prev, [buttonId]: true }))

    // Simulate async operation
    setTimeout(() => {
      setLoadingStates((prev) => ({ ...prev, [buttonId]: false }))
    }, 2000)
  }

  const buttonTypes: ButtonType[] = ["primary", "secondary", "success", "warning", "error"]

  return (
    <main className="min-h-screen bg-background p-8">
      <div className="max-w-4xl mx-auto space-y-8">
        <div className="text-center space-y-4">
          <h1 className="text-4xl font-bold text-foreground">Componente LargeActionButton</h1>
          <p className="text-xl text-muted-foreground leading-relaxed">
            Botones grandes y accesibles optimizados para usuarios de 50+ años
          </p>
        </div>

        {/* Button Types Demo */}
        <section className="space-y-6">
          <h2 className="text-2xl font-semibold text-foreground">Tipos de Botones</h2>
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {buttonTypes.map((type) => (
              <LargeActionButton
                key={type}
                buttonText={`Botón ${type.charAt(0).toUpperCase() + type.slice(1)}`}
                buttonType={type}
                isLoading={loadingStates[type]}
                onClick={() => handleButtonClick(type)}
              />
            ))}
          </div>
        </section>

        {/* Critical Actions Demo */}
        <section className="space-y-6">
          <h2 className="text-2xl font-semibold text-foreground">Acciones Críticas (80px altura)</h2>
          <div className="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <LargeActionButton
              buttonText="Generar Rutina"
              buttonType="primary"
              isCritical={true}
              isLoading={loadingStates["generate"]}
              onClick={() => handleButtonClick("generate")}
            />
            <LargeActionButton
              buttonText="Eliminar Datos"
              buttonType="error"
              isCritical={true}
              isLoading={loadingStates["delete"]}
              onClick={() => handleButtonClick("delete")}
            />
          </div>
        </section>

        {/* States Demo */}
        <section className="space-y-6">
          <h2 className="text-2xl font-semibold text-foreground">Estados del Botón</h2>
          <div className="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <LargeActionButton buttonText="Botón Normal" buttonType="primary" />
            <LargeActionButton buttonText="Cargando..." buttonType="secondary" isLoading={true} />
            <LargeActionButton buttonText="Deshabilitado" buttonType="success" isEnabled={false} />
            <LargeActionButton
              buttonText="Cargando Deshabilitado"
              buttonType="warning"
              isLoading={true}
              isEnabled={false}
            />
          </div>
        </section>

        {/* Usage Example */}
        <section className="space-y-6">
          <h2 className="text-2xl font-semibold text-foreground">Ejemplo de Uso - GymRoutine Generator</h2>
          <div className="bg-card p-6 rounded-lg border space-y-4">
            <LargeActionButton
              buttonText="Generar Nueva Rutina"
              buttonType="primary"
              isCritical={true}
              isLoading={loadingStates["gym"]}
              onClick={() => handleButtonClick("gym")}
            />
            <p className="text-sm text-muted-foreground">
              Este botón seguiría las especificaciones exactas para la aplicación GymRoutine Generator
            </p>
          </div>
        </section>
      </div>
    </main>
  )
}
