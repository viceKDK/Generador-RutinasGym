<UserControl x:Class="GymRoutineGenerator.UI.Views.PhysicalLimitationsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <StackPanel Padding="12" Spacing="8">
      <TextBlock Text="Limitaciones Fisicas (placeholder)"/>
      <CheckBox x:ConnectionId='2' x:Name="BackProblemsCheckBox" Content="Espalda"/>
      <CheckBox x:ConnectionId='3' x:Name="KneeProblemsCheckBox" Content="Rodilla"/>
      <CheckBox x:ConnectionId='4' x:Name="ShoulderProblemsCheckBox" Content="Hombro"/>
      <CheckBox x:ConnectionId='5' x:Name="CardiovascularIssuesCheckBox" Content="Cardio"/>
      <CheckBox x:ConnectionId='6' x:Name="RecentInjuryCheckBox" Content="Lesion reciente"/>
      <CheckBox x:ConnectionId='7' x:Name="PregnancyCheckBox" Content="Embarazo"/>
      <CheckBox x:ConnectionId='8' x:Name="ArthritisCheckBox" Content="Artritis"/>
      <TextBlock Text="Intensidad"/>
      <Slider x:ConnectionId='9' x:Name="IntensitySlider" Minimum="1" Maximum="3" Value="3"/>
      <TextBlock x:ConnectionId='10' x:Name="IntensityText"/>
      <ListView x:ConnectionId='11' x:Name="ExcludedExercisesList"/>
      <ListView x:ConnectionId='12' x:Name="ExerciseSearchResults"/>
      <StackPanel Orientation="Horizontal" Spacing="8">
        <Button x:ConnectionId='13' x:Name="SaveLimitationsButton" Content="Guardar"/>
        <Button x:ConnectionId='14' x:Name="ResetLimitationsButton" Content="Restablecer"/>
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</UserControl>

