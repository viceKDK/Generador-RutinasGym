<UserControl x:Class="GymRoutineGenerator.UI.Views.PhysicalLimitationsForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <ScrollViewer>
    <Grid Margin="20" MaxWidth="700">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>

      <!-- Title -->
      <TextBlock Grid.Row="0" Text="Limitaciones Físicas"
                 FontSize="24" FontWeight="Bold"
                 Margin="0,0,0,15"
                 HorizontalAlignment="Center"/>

      <!-- Subtitle -->
      <TextBlock Grid.Row="1"
                 Text="Seleccione cualquier limitación física que pueda afectar el entrenamiento"
                 FontSize="14" Foreground="Gray"
                 Margin="0,0,0,25"
                 HorizontalAlignment="Center"
                 TextWrapping="Wrap"/>

      <!-- Quick Action -->
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,0,0,20">
        <Button x:Name="NoLimitationsButton" Content="✅ Sin limitaciones"
                FontSize="16" Height="45" MinWidth="160"
                Background="Green" Foreground="White"/>
        <Button x:Name="ClearAllLimitationsButton" Content="🗑️ Limpiar todo"
                FontSize="16" Height="45" MinWidth="140"
                Background="Orange" Foreground="White"/>
      </StackPanel>

      <!-- Common Limitations -->
      <StackPanel Grid.Row="3" Margin="0,0,0,20">
        <TextBlock Text="Limitaciones Comunes" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <StackPanel Grid.Column="0" Spacing="12" Margin="0,0,10,0">
            <CheckBox x:Name="BackProblemsCheckBox" Content="🦴 Problemas de espalda" FontSize="16"/>
            <CheckBox x:Name="KneeProblemsCheckBox" Content="🦵 Problemas de rodilla" FontSize="16"/>
            <CheckBox x:Name="ShoulderProblemsCheckBox" Content="💪 Problemas de hombro" FontSize="16"/>
            <CheckBox x:Name="NeckProblemsCheckBox" Content="🧘 Problemas cervicales" FontSize="16"/>
          </StackPanel>

          <StackPanel Grid.Column="1" Spacing="12">
            <CheckBox x:Name="CardiovascularIssuesCheckBox" Content="❤️ Problemas cardiovasculares" FontSize="16"/>
            <CheckBox x:Name="RecentInjuryCheckBox" Content="🚑 Lesión reciente" FontSize="16"/>
            <CheckBox x:Name="ArthritisCheckBox" Content="🦴 Artritis" FontSize="16"/>
            <CheckBox x:Name="PregnancyCheckBox" Content="🤰 Embarazo" FontSize="16"/>
          </StackPanel>
        </Grid>
      </StackPanel>

      <!-- Intensity Level -->
      <StackPanel Grid.Row="4" Margin="0,0,0,20">
        <TextBlock Text="Nivel de Intensidad Recomendado" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" Spacing="15">
          <Slider x:Name="IntensitySlider" Minimum="1" Maximum="3" Value="3" Width="300"
                  TickFrequency="1" SnapsTo="Ticks" IsSnapToTickEnabled="True"/>
          <TextBlock x:Name="IntensityText" Text="Alta intensidad" FontSize="16" FontWeight="Bold"
                     VerticalAlignment="Center"/>
        </StackPanel>
      </StackPanel>

      <!-- Other Limitations -->
      <StackPanel Grid.Row="5" Margin="0,0,0,20">
        <TextBlock Text="Otras Limitaciones" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
        <TextBox x:Name="OtherLimitationsTextBox"
                 PlaceholderText="Ej.: vértigo, codo de tenista, alergias, medicamentos, etc."
                 FontSize="16" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
      </StackPanel>

      <!-- Recommendations Section -->
      <Border Grid.Row="6" Background="LightBlue" CornerRadius="8" Padding="15" Margin="0,0,0,20">
        <StackPanel>
          <TextBlock Text="💡 Recomendaciones Automáticas" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
          <TextBlock x:Name="RecommendationsTextBlock"
                     Text="Seleccione limitaciones para ver recomendaciones automáticas"
                     FontSize="14" TextWrapping="Wrap"/>
        </StackPanel>
      </Border>

      <!-- Error Messages -->
      <TextBlock x:Name="ErrorTextBlock" Grid.Row="7"
                 Foreground="Red" FontSize="14"
                 TextWrapping="Wrap" Visibility="Collapsed"
                 Margin="0,0,0,20"/>

      <!-- Action Buttons -->
      <StackPanel Grid.Row="8" Orientation="Horizontal"
                  HorizontalAlignment="Center" Spacing="20">
        <Button x:Name="SaveLimitationsButton" Content="💾 Guardar Limitaciones"
                FontSize="16" Height="50" MinWidth="180"
                Background="DodgerBlue" Foreground="White"/>
        <Button x:Name="ResetLimitationsButton" Content="🔄 Restablecer"
                FontSize="16" Height="50" MinWidth="130"
                Background="Gray" Foreground="White"/>
      </StackPanel>
    </Grid>
  </ScrollViewer>
</UserControl>
